{% extends 'base.html.twig' %}

{% block title 'Gérer les projets' %}

{% block body %}
<div class='container'> 
    {# Le 3 méthodes permettent d'afficher le formulaire, pour le modifier : config/packages/twig.yaml #}
    {{ form_start(form)}}
    <div class="row">
        {# Méthode form_row pour afficher le champs qui correspond à sa propriété #}
        <div class="col-md-12">{{form_row(form.title)}}</div>
        <div class="col-md-12">{{form_row(form.description)}}</div>
        <div class="col-md-4">{{form_row(form.surface)}}</div>
        <div class="col-md-4">{{form_row(form.ground)}}</div>
        <div class="col-md-4">{{form_row(form.area)}}</div>
    </div>
        {{ form_rest(form)}}
        <button class="btn btn-primary">{{button|default('Créer')}}</button>
    {{ form_end(form)}}

</div>

{% endblock %}